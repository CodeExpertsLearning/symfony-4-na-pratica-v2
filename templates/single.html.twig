{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-8">
                <div class="row">
                   <div class="col-12">
                       <h2>{{ post.title }}</h2>
                       <small>Post criado em {{ post.createdAt|date("d/m/Y H:i:s") }}
                           por {{ post.author.firstName }}</small>
                       <hr>
                   </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ post.content|raw }}
                    </div>
                </div>
            </div>

            <div class="col-4">

            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Blog Symfony 4
{% endblock %}

