{% extends 'base_admin.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Postagens Recentes</h1>
    <a href="{{ path('post_create') }}" class="btn btn-sm btn-success">Criar Post</a>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Autor</th>
                <th>Post</th>
                <th>Criado Em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.author.firstName }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt|date('d/m/Y H:i:s') }}</td>
                <td>
                    {# if is_granted('ROLE_ADMIN') #}
                        <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        <a href="{{ path('post_remove', {'id': post.id}) }}" class="btn btn-sm btn-danger">Apagar</a>
                    {# endif #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
